
@{
    ViewBag.Title = "kullanıcıListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using real_estate_web_application.Models;


<!--ADMİN LİSTESİ-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <B>İlan Listesi</B>
            </header>

            @{
                if (TempData["b"] != null)
                {
                    <br />
                    <div class="col-lg-12">
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>@TempData["b"]</strong>
                        </div>
                    </div>
                }
            }

            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Admin Listesi
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="icon-bullhorn"></i>Adı</th>
                                    <th><i class="icon-question-sign"></i>Soyadı</th>
                                    <th><i class="icon-bookmark"></i>Kullanıcı Adı</th>
                                    <th><i class="icon-edit"></i>Telefon</th>
                                    <th><i class="icon-edit"></i>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (Kullanicilar a in ViewBag.Kullanicilar)
                                {
                                    if (a.admin == true)
                                    {
                                        <tr>
                                            <td>@a.ad</td>
                                            <td>@a.soyad</td>
                                            <td><span class="label label-info label-mini">@a.kullaniciAdi</span></td>
                                            <td>@a.telefon</td>
                                            <td>
                                                <button class="btn btn-primary btn-xs"><i class="icon-pencil"></i></button>

                                                <a href="#" class="btn btn-danger btn-xs modalAc" data-toggle="modal" data-adminad="@a.ad" data-adminsoyad="@a.soyad" data-adminid="@a.kullaniciID" data-target="#modalConfirmDelete"><i class="icon-trash"></i></a>
                                                <!--Modal: modalConfirmDelete-->
                                                <div class="modal fade" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-sm modal-notify modal-danger" role="document">
                                                        <!--Content-->
                                                        <div class="modal-content text-center">
                                                            <!--Header-->
                                                            <div class="modal-header d-flex justify-content-center">
                                                                <p class="heading">Admin Sil</p>
                                                            </div>

                                                            <!--Body-->
                                                            <div class="modal-body">

                                                                <p></p>

                                                            </div>

                                                            <!--Footer-->
                                                            <div class="modal-footer flex-center">
                                                                <a class="btn  btn-success adminSil">Evet</a>
                                                                <a class="btn  btn-danger waves-effect" data-dismiss="modal">İptal</a>
                                                            </div>
                                                        </div>
                                                        <!--/.Content-->
                                                    </div>
                                                </div>
                                                <!--Modal: modalConfirmDelete-->
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </section>
                </div>
            </div>



            <!--KULLANICI LİSTESİ-->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Kullanıcı Listesi
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="icon-bullhorn"></i>Adı</th>
                                    <th><i class="icon-question-sign"></i>Soyadı</th>
                                    <th><i class="icon-bookmark"></i>Kullanıcı Adı</th>
                                    <th><i class="icon-edit"></i>Telefon</th>
                                    <th><i class="icon-edit"></i>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Kullanicilar a in ViewBag.Kullanicilar)
                                {
                                    if (a.admin == false)
                                    {
                                        <tr>
                                            <td>@a.ad</td>
                                            <td>@a.soyad</td>
                                            <td><span class="label label-info label-mini">@a.kullaniciAdi</span></td>
                                            <td>@a.telefon</td>
                                            <td><a href="#" class="btn btn-danger btn-xs klnSil" data-klnid="@a.kullaniciID"><i class="icon-trash"></i></a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>



            @section script{

                <script src="~/Content/Admin/js/jquery-1.8.3.min.js"></script>

                <script>
                    $(".modalAc").click(function () {
                        var adminAd = $(this).data("adminad");
                        var adminSoyad = $(this).data("adminsoyad");
                        $(".modal-body>p").html(adminAd + " " + adminSoyad + " isimli admin silinsin mi?");
                        var adminID = $(this).data("adminid");
                        $(".adminSil").data("adminID", adminID) //modal butonuna basıldığında id'yi çeker bu id'yide bu satırda adminSil classlı butona yolluyoruz
                        $(".adminSil").data("adminAd", adminAd)
                        $(".adminSil").data("adminSoyad", adminSoyad)
                    });
                    $(".adminSil").click(function () {  //adminSil classlı buton çalıştığında ajax çalışacak ve silencek admini controllers'a yolllar
                        var adminID = $(this).data("adminID");
                        var adminAd = $(this).data("adminAd");
                        var adminSoyad = $(this).data("adminSoyad");                        
                       

                        $.ajax({
                            type: "POST",
                            url: "/Admin/kullaniciSil/" + adminID,
                            success: function () {
                                window.location.replace("/Admin/kullaniciListele");
                            },
                            error: function () {

                            }
                        });

                    });

                </script>
            }

        </section>
    </div>
</div>











