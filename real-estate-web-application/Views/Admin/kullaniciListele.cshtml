
@{
    ViewBag.Title = "kullanıcıListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using real_estate_web_application.Models;


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Admin Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i>Adı</th>
                        <th class="hidden-phone"><i class="icon-question-sign"></i>Soyadı</th>
                        <th><i class="icon-bookmark"></i>Kullanıcı Adı</th>
                        <th><i class="icon-edit"></i>Telefon</th>
                        <th><i class="icon-edit"></i>Sil</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (Kullanicilar a in ViewBag.Kullanicilar)
                    {
                        if (a.admin == true)
                        {
                            <tr>
                                <td>@a.ad</td>
                                <td>@a.soyad</td>
                                <td><span class="label label-info label-mini">@a.kullaniciAdi</span></td>
                                <td>@a.telefon</td>
                                <td>
                                <button class="btn btn-primary btn-xs"><i class="icon-pencil"></i></button>
                                <a href="#" class="btn btn-danger btn-xs admSil" data-admid="@a.kullaniciID"><i class="icon-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kullanıcı Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i>Adı</th>
                        <th><i class="icon-question-sign"></i>Soyadı</th>
                        <th><i class="icon-bookmark"></i>Kullanıcı Adı</th>
                        <th><i class="icon-edit"></i>Telefon</th>
                        <th><i class="icon-edit"></i>İşlemler</th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   
                        @foreach (Kullanicilar a in ViewBag.Kullanicilar)
                        {
                            if (a.admin==false)
                            {
                                <tr>
                                    <td>@a.ad</td>
                                    <td>@a.soyad</td>
                                    <td><span class="label label-info label-mini">@a.kullaniciAdi</span></td>
                                    <td>@a.telefon</td>
                                    <td><a href="#" class="btn btn-danger btn-xs klnSil" data-klnid="@a.kullaniciID"><i class="icon-trash"></i></a></td>
                                </tr>
                            }
                        }
                </tbody>
            </table>
        </section>
    </div>
</div>



@section script{
    
    <script src="~/Content/Admin/js/jquery-1.8.3.min.js"></script>

    <script>
        $(".klnSil").click(function () {
            var sonuc = confirm("Kayıt Silinsin mi?");
            if (sonuc) {
                var klnID = $(this).data("klnid");
                $.ajax({                    
                    type: "POST",
                    url: "/Admin/kullaniciSil/" + klnID,
                    success: function () {
                        alert("Kayıt Silindi");
                        window.location.replace("/Admin/kullaniciListele");
                    },
                    error: function () {
                        alert("Kayıt silme sırasında hata oluştu!");
                    }
                });
            }
            else {
                alert("Kayıt silme işlemi iptal edildi");
            }
        });
    </script> 
    
    <script>
        $(".admSil").click(function () {
            var sonuc = confirm("Kayıt Silinsin mi?");
            if (sonuc) {
                var admID = $(this).data("admid");
                $.ajax({
                    type: "POST",
                    url: "/Admin/adminSil/" + admID,
                    success: function () {
                        alert("Kayıt Silindi");
                        window.location.replace("/Admin/kullaniciListele");
                    },
                    error: function () {
                        alert("Kayıt silme sırasında hata oluştu!");
                    }
                });
            }
            else {
                alert("Kayıt silme işlemi iptal edildi");
            }
        });
</script>    
    
}




