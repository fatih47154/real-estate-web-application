
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using real_estate_web_application.Models

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Yorum Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>

                        <th>Adi</th>
                        <th>İçerik</th>
                        <th>Eklenme Tarihi</th>
                        <th>İlan</th>
                        <th>Onay</th>
                        <th>Sil</th>

                        @foreach (yorum item in ViewBag.TumYorumlar)
                        {
                        <tr>
                            <td>@item.Kullanicilar.ad<span> </span>@item.Kullanicilar.soyad</td>
                            <td>@item.icerik</td>
                            <td>@item.eklenmeTarihi</td>
                            <td><a href="/Home/HaberDetay/@item.yorumID" target="_blank"> @item.Ilan.baslik</a></td>

                            @if (item.onay == "False")
                            {
                                <td>
                                    ><a href="YorumOnay/@item.yorumID" class="btn btn-success btn-xs"><i class="icon-ok">  Onay</i></a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a href="YorumOnayGeri/@item.yorumID" class="btn btn-primary btn-xs"><i class="icon-reply">  Geri Al</i></a>
                                </td>
                            }
                            <td>
                                <a href="YorumSil/@item.yorumID" class="btn btn-danger btn-xs"><i class="icon-trash "></i></a>
                            </td>
                        </tr>
                    }



                        </tr>
                    </thead>
                <tbody></tbody>
            </table>
        </section>
    </div>
</div>



