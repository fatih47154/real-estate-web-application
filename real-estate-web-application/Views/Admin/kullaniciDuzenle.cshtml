
@{
    ViewBag.Title = "Kullanıcı Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <b>Admin Düzenle</b>
                <br />
            </header>
            <div class="panel-body">

                <form class="form-horizontal tasi-form" method="post" action="kullaniciDuzenle">
                    

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Ad</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="ad" value="@ViewBag.guncellenenAdmin.ad">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Soyad</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="soyad" value="@ViewBag.guncellenenAdmin.soyad">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kullanıcı Adı</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="kullaniciAdi" value="@ViewBag.guncellenenAdmin.kullaniciAdi">
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Telefon</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="telefon" value="@ViewBag.guncellenenAdmin.telefon">
                        </div>
                    </div> 
                                     
                    <input type="hidden" name="id" value="@ViewBag.guncellenenAdmin.kullaniciID" />

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a href="/Admin/kullaniciListele" class="btn btn-primary btn-danger">İptal</a>
                </form>
            </div>
        </section>
    </div>
</div>
