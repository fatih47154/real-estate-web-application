
@{
    ViewBag.Title = "konutEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using real_estate_web_application.Models;

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <b>Konut Ekle</b>
                <br />
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" method="post" action="konutEkle">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Başlık</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="baslik">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Fiyat</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="fiyat">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tarih</label>
                        <div class="col-sm-10">
                            <input type="text" placeholder="" data-mask="99/99/9999" class="form-control" name="tarih">
                            <span class="help-inline">gg/aa/yyyy</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Metre Kare</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="metrekare">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="aciklama">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Vitrin Durumu</label>
                        <div class="col-md-10">
                            <select onchange="show_selected()" id="prof" class="form-control m-bot15" tabindex="-1" aria-hidden="true" name="vitrin">
                                <option value="default">Vitrin Durum Seç</option>
                                <option value="true">Vitrinde</option>
                                <option value="false">Vitrinde Değil</option>
                            </select>
                        </div>
                    </div>                   

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Durumu</label>
                        <div class="col-md-10">
                            <select onchange="show_selected()" id="prof" class="form-control m-bot15" tabindex="-1" aria-hidden="true" name="durum">
                                <option value="default">Durum Seç</option>
                                <option value="satilik">Satılık</option>
                                <option value="kiralik">Kiralık</option>
                            </select>
                        </div>
                    </div>

                    <input type="hidden" value="1" name="kullaniciID" />

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kategori</label>
                        <div class="col-md-10">
                            <select onchange="show_selected()" id="prof" class="form-control m-bot15" tabindex="-1" aria-hidden="true" name="kategoriID">
                                <option value="default">Kategori Seç</option>
                                <option value="1">Müstakil Ev</option>
                                <option value="2">Daire</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">İl</label>
                        <div class="col-md-10">
                            <select onchange="show_selected()" id="prof" class="form-control m-bot15" tabindex="-1" aria-hidden="true" name="IL_ID">
                                <option value="default">İl Seç</option>
                                @foreach (il item in ViewBag.iller)
                                {
                                    <option value="@item.IL_ID">@item.IL_ADI</option>
                                }
                               
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">İlce</label>
                        <div class="col-md-10">
                            <select onchange="show_selected()" id="prof" class="form-control m-bot15" tabindex="-1" aria-hidden="true" name="ILCE_ID">
                                <option value="default">İlçe Seç</option>
                                @foreach (ilce item in ViewBag.ilceler)
                                {
                                    <option value="@item.ILCE_ID">@item.ILCE_ADI</option>
                                }

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Semt</label>
                        <div class="col-md-10">
                            <select onchange="show_selected()" id="prof" class="form-control m-bot15" tabindex="-1" aria-hidden="true" name="SEMT_ID">
                                <option value="default">Semt Seç</option>
                                @foreach (semt item in ViewBag.semtler)
                                {
                                    <option value="@item.SEMT_ID">@item.SEMT_ADI</option>
                                }

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Mahalle / Köy</label>
                        <div class="col-md-10">
                            <select onchange="show_selected()" id="prof" class="form-control m-bot15" tabindex="-1" aria-hidden="true" name="MAH_ID">
                                <option value="default">Mahalle / Köy Seç</option>
                                @foreach (mahalle_koy item in ViewBag.mahalleKoyler)
                                {
                                    <option value="@item.MAH_ID">@item.MAHALLE_ADI</option>
                                }

                            </select>
                        </div>
                    </div>

